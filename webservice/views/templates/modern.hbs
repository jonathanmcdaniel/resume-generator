<html>
    <head>
        <style>
            html {
                margin: 0;
                font-size: 12pt;
                font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
            }
            body {
                margin: 0;
                padding: 36pt;
            }
            h1,
            h2,
            h3,
            h4,
            h5,
            h6 {
                line-height: 0%;
            }
            h1 {
                font-size: 18pt;
            }
            h2 {
                font-size: 16pt;
                padding-bottom: 10pt;
                margin-bottom: 8pt;
                color: #7F171F;
            }
            .biographics {
                padding: 18pt 36pt;
                margin: -36pt -36pt -18pt -36pt;
                text-align: left;
                color: white;
                background-color: #7F171F ;
            }
            
            .section {
                margin-top: 36pt;
            }
            .section.first {
                margin-top: 54pt;
            }
            .item {
                margin-top: 10pt;
            }
            .flex-container {
                display: flex;
            }
            .flex-list {
                flex-direction: row;
                flex-wrap: wrap;
                margin: 0;
                margin-top: 10pt;
            }
            .sub-item {
                max-width: 50%;
                width: 50%;
            }
            .text-right {
                text-align: right;
            }
            .description {
                margin-left: 20pt;
            }
            .skill {
                width: 33%;
                margin-bottom: 5pt;
            }
        </style>
    </head>

    <body>
        <div class="biographics">
            <h1>{{name}}</h1>
            <addr>
                {{addr1}}
                <br/> {{addr2}}
                <br> {{city}}, {{state}}
                <br/> {{email}}
            </addr>
        </div>
        <div class="section first">
            <h2>Summary</h2>
            {{summary}}
        </div>
        <div class="section">
            <h2>Education</h2>
            {{#each education as |edu|}}
            <div class="item">
                <div class="flex-container">
                    <div class="sub-item">
                        <strong>{{edu.name}}</strong>
                        <br/> {{edu.degree}}
                    </div>
                    <div class="sub-item text-right">
                        {{city}}, {{state}}
                        <br/> {{date}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="section">
            <h2>Experience</h2>
            {{#each experience as |job|}}
            <div class="item">
                <div class="flex-container">
                    <div class="sub-item">
                        <strong>{{job.title}}</strong>
                        <br/>
                        <em>{{job.employer}}</em>
                    </div>
                    <div class="sub-item text-right">
                        {{job.city}}, {{job.state}}
                        <br/> {{job.startDate}} - {{job.endDate}}
                    </div>
                </div>
                <div class="description">
                    {{job.description}}
                </div>
            </div>
            {{/each}}
        </div>
        <div class="section">
            <h2>Skills</h2>
            <ul class="flex-container flex-list">
                {{#each skills as |skill|}}
                <li class="skill">{{skill}}</li>
                {{/each}}
            </ul>
        </div>
    </body>
</html>